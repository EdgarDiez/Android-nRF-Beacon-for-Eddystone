<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/alert_dialog_padding_left"
    android:paddingRight="@dimen/alert_dialog_padding_right"
    android:paddingBottom="@dimen/alert_dialog_padding_bottom"
    android:paddingTop="@dimen/alert_dialog_padding_top">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_lock_state" />

            <Spinner
                android:id="@+id/frame_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/eddystone_lock_states"
                tools:listitem="@android:layout/simple_spinner_dropdown_item" />

            <TextView
                android:id="@+id/title_old_lock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eddystone_old_lock_code" />

            <LinearLayout
                android:id="@+id/old_lock_code_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/old_lock_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/lock_code_length"
                    android:inputType="text"
                    android:singleLine="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eddystone_byte_array" />
            </LinearLayout>

            <TextView
                android:id="@+id/title_new_lock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eddystone_new_lock_code" />

            <LinearLayout
                android:id="@+id/new_lock_code_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/new_lock_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/lock_code_length"
                    android:inputType="text"
                    android:singleLine="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eddystone_byte_array" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>