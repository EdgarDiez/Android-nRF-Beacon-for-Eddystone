<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/alert_dialog_padding_bottom"
    android:layout_marginRight="@dimen/alert_dialog_padding_right"
    android:layout_marginLeft="@dimen/alert_dialog_padding_left">

    <LinearLayout
        android:paddingLeft="@dimen/alert_dialog_padding_left"
        android:paddingRight="@dimen/alert_dialog_padding_right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/error_message"/>

        <TextView
            android:id="@+id/error_message"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:paddingStart="@dimen/alert_dialog_padding_left"
        android:paddingEnd="@dimen/alert_dialog_padding_right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/error_status" />

        <TextView
            android:id="@+id/error_status"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>